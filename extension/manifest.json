{
  "manifest_version": 2,

  "name": "KDE Plasma Integration",
  "short_name": "KDE Plasma Chrome",
  "description": "This extension provides desktop integration between KDE Plasma and Chrome",
  "version": "0.1",

  "default_locale": "en",

  "author": "Kai Uwe Broulik <kde@prviat.broulik.de>",
  "key": "TODO",

  "icons": {
    "16": "icons/plasma-16.png",
    "32": "icons/plasma-32.png",
    "48": "icons/plasma-48.png",
    "128": "icons/plasma-128.png"
  },

  "background": {
    "page": "extension.html",
    "persistent": false
  },

  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content-script.js"],
      "run_at":"document_start",
      "css": ["style.css"]
    }
  ],

  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "permissions": [
    "alarms",
    "nativeMessaging",
    "notifications",
    "storage",
    "activeTab",
    "downloads",
    "downloads.shelf",
    "tabs",

    "contextMenus"
  ],
    "applications": {
    "gecko": {
      "id": "plasma-shell-integration@gnome.org",
      "strict_min_version": "50.0"
    }
  },
  "optional_permissions": [ "webRequest" ],
  "web_accessible_resources": ["include/sweettooth-api.js"]
}
